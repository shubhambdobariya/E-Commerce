<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div>
        <h1 class="product-heading"> Ticket Edited Form</h1>
      </div>
      <%= form_for @ticket, method: :patch do |form| %>
        <div class="project-form">
          <div class="form-group row mt-3 d-block">
            <%= form.label :title, "Ticket Title: <span class='required'>*</span>".html_safe %>
            <%= form.text_field :title, class: "form-control", placeholder: 'Enter your title' %>
            <div>
              <% @ticket.errors.full_messages_for(:title).each do |message| %>
                <div style="color: red">
                  <%= message %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :status, "Status:" %>
            <%= form.select :status, Ticket.statuses.keys.map { |status| [status.humanize, status] }, { include_blank: 'Select Status' }, class: "form-control" %>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :description, "Description: <span class='required'>*</span>".html_safe %>
            <%= form.text_area :description, class: "form-control", placeholder: 'Enter the Description' %>
          </div>

          <div>
            <%= form.submit "Update", class: "btn btn-primary row mt-3" %>
            <%= link_to 'Back', tickets_path, class: "btn btn-secondary margin-button" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
