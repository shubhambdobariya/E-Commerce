<div class="row">
  <div class="col-md-6 text-start">
    <%= form_tag(products_path, method: "get", class: "d-inline-block") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        <div class="input-group-append">
          <%= submit_tag "Search", class: 'btn btn-outline-secondary', style: 'color: black;' %>
        </div>
        <div class="input-group-append">
          <%= link_to "X", products_path(search: nil), class: "clear-search-button btn btn-outline-secondary color-x input-group-text" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col text-end">
    <%= link_to new_product_path, class: 'btn btn-outline-secondary', style: 'color: black;' do %>
      <i class="bi bi-person-circle"></i>
      Add Product
    <% end %>
  </div>
</div>

<div class="mt-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="gray-header">Title</th>
        <th class="gray-header">Description</th>
        <th class="gray-header">Price</th>
        <th class="gray-header">Compare at Price</th>
        <th class="gray-header">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title.capitalize %></td>
          <td>
          <% if product.description.present? %>
              <%= product.description.slice(0, 1).capitalize + product.description.slice(1..-1) %>
            <% else %>
              No description available
            <% end %>
        </td>
          <td><%= product.price %></td>
          <td><%= product.compare_at_price %></td>
          <td>
            <%= link_to product, title: "View", class: "btn btn-sm" do %>
              <i class="fa-solid fa-eye text-primary"></i>
            <% end %>
            |
            <%= link_to edit_product_path(product), title: "Edit", class: "btn btn-sm" do %>
              <i class="fa-solid fa-pen-to-square text-warning"></i>
            <% end %>
            |
            <%= link_to product_path(product), method: :delete, title: "Delete", data: { turbo_method: :delete, turbo_confirm: 'Are you sure delete the data?' }, class: "btn btn-sm" do %>
              <i class="fa-solid fa-trash text-danger"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>

<% if @products.any? %>
  <!-- Display products -->
<% else %>
  <p>No records found</p>
<% end %>
