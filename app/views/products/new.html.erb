<%= stylesheet_link_tag 'custom_styles.css' %>
<div class=”container”>
  <div class="row justify-content-center">
    <div class=”col-5″>
      <div>
        <h1 class=”product-heading″> Product Created Form</h1>
      </div>
      <%= form_with model: @product, method: :post do |form| %>
        <div class="product-form">
          <div class="form-group row mt-3 d-block">
            <%= form.label :title, "Title: <span class='required'>*</span>".html_safe %>
            <%= form.text_field :title, class: "form-control", placeholder: 'Enter your Title' %>
            <div>
              <% @product.errors.full_messages_for(:title).each do |message| %>
                <div style="color: red">
                  <%= message %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :description, "Description:" %>
            <%= form.text_area :description, class: "form-control", placeholder: 'Enter your Description' %>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :price, "Price:"%>
            <%= form.text_field :price, class: "form-control", placeholder: 'Enter the price' %>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :compare_at_price, "compare_at_price: <span class='required'>*</span>".html_safe  %>
            <%= form.text_field :compare_at_price, class: "form-control", placeholder: 'Enter the compare_at_price' %>
            <div>
              <% @product.errors.full_messages_for(:compare_at_price).each do |message| %>
                <div style="color: red">
                  <%= message %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="form-group row mt-3 d-block">
            <%= form.label :category_id, 'Category' %>
            <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: true }, { class: "form-control dropdown" } %>
          </div>

          <div>
            <%= form.submit "create", class: "btn btn-primary row mt-3" %>
            <%= link_to 'Back', products_path, class: "btn btn-secondary margin-button" %>
            </div>

            
        </div>
      <% end %>
    </div>
  </div>
</div>
