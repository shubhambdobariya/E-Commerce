<!-- users/show.html.erb -->
<div class="container">
  <% if current_user.developer %>
    <h2>Welcome <%= current_user.firstname %>!</h2>
    <p>You are also registered as a developer:</p>
    <ul>
      <li>Name: <%= current_user.developer.name %></li>
      <li>Position: <%= current_user.developer.position %></li>
    </ul>

    <% if current_user.developer.projects.any? %>
      <h3>Projects Assigned:</h3>
      <ul>
        <% current_user.developer.projects.each do |project| %>
          <li><%= project.project_name %> - Status: <%= project.status %></li>
        <% end %>
      </ul>
    <% else %>
      <p>You are not currently assigned to any projects.</p>
    <% end %>

  <% else %>
    <h2>Welcome <%= current_user.firstname %>!</h2>
    <p>You are not registered as a developer.</p>
  <% end %>
</div>
